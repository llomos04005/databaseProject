<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
  </head>
  <body>
    <%- include('partials/navbar') %>
    <%- include('./partials/loggedInAs.ejs', {username: username}) %>
    <h2 class="text-center text-primary"><i><%=hotel.Name%></i></h2>
    <h3 class="text-center">Location:</h3>
    <h4 class="text-center text-primary"><i><%=hotel.Location%></i></h4>
    <h3 class="text-center">Rate:</h3>
     <% if(hotel.rated) { %>
      <h4 class="text-center text-primary"><i><%=hotel.avg%></i></h4>
    <% } else if(user != null) {%>
      <div class="text-center">
        <button onclick="makeRate('<%=userId%>','http\:\/\/localhost:3000\/hotels\/<%=hotel.id%>\/rate' )" class="btn btn-success"> Rate a hotel</button>
    </div>
    <% }; %>
    <script src="../javascripts/makeRate.js"></script>
    <%-include('./partials/footer.ejs')%>
  </body>
</html>